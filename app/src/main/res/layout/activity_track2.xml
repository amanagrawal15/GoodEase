
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"

                xmlns:android="http://schemas.android.com/apk/res/android">



<fragment xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:map="http://schemas.android.com/apk/res-auto"
          xmlns:tools="http://schemas.android.com/tools"
          android:id="@+id/map"
          android:name="com.google.android.gms.maps.SupportMapFragment"
          android:layout_width="match_parent"
          android:layout_height="144dp"
          tools:context="com.example.hp.goodease.TrackActivity"/>

    <Button
        android:id="@+id/btn_DName"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/map"
        android:layout_marginTop="74dp"
        android:text="Driver Name"/>

    <Button
        android:id="@+id/btn_VehicleNo."
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_DName"
        android:layout_alignBottom="@+id/btn_DName"
        android:layout_toEndOf="@+id/btn_DName"
        android:layout_toRightOf="@+id/btn_DName"
        android:text="Vehicle No."/>

    <Button
        android:id="@+id/btn_VehicleType"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_VehicleNo."
        android:layout_alignBottom="@+id/btn_VehicleNo."
        android:layout_toEndOf="@+id/btn_VehicleNo."
        android:layout_toRightOf="@+id/btn_VehicleNo."
        android:text="Vehicle Type"/>

    <Button
        android:id="@+id/btn_CallDriver"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="95dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:text="CallDriver"/>

    <Button
        android:id="@+id/btn_Cancel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_CallDriver"
        android:layout_alignBottom="@+id/btn_CallDriver"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="CANCEL"/>
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/et_drop" />

</RelativeLayout>